%section#top-header.row
  %h1.col-md-2
    = link_to "MyFLiX", root_path
  - if logged_in?
    %ul.col-md-4.clearfix
      %li= link_to "Videos" #these paths obviously need to be fixed later on
      %li= link_to "My Queue"
      %li= link_to "People"

    = form_tag search_videos_path, method: 'get', class: 'col-md-5 navbar-form' do
      .form-group
        = text_field_tag :search_field, nil, class: 'form-control', placeholder: "Search for videos here"
        = submit_tag "Search", class: 'btn btn-default'

    #user_links.pull-right
      %ul
        %li.dropdown
          = link_to "", :id => "dlabel", :role => "button", :'data-toggle' => 'dropdown', :class => 'dropdown-toggle' do #insert the path later on
            Welcome, #{current_user.full_name}
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              %a(href="#") Account
              %a(href="#") Plan and Billing
              = link_to 'Sign Out', sign_out_path, method: 'delete'
