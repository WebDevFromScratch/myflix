- @categories.each do |category|
  %article.video_category
    %header
      %h3= link_to category.name.pluralize, category_path(category)
    .videos.row
      - category.videos.each do |video|
        .video.col-sm-2
          = link_to video_path(video) do #set path when I have a show view
            %img(src="#{video.small_cover_url}")
          